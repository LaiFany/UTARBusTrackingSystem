<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeActivity"
    android:background="#2fb144"
    android:orientation="vertical">



    <!--<Button android:id="@+id/newsBtn"
        android:text="News Portal"
        android:onClick="showNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button android:id="@+id/scheduleBtn"
        android:text="Bus Schedule"
        android:onClick="showSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button android:id="@+id/mapBtn"
        android:text="Map"
        android:onClick="showMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showMap"
                    android:src="@drawable/map"
                    android:background="@drawable/map" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.89">

                <ImageView
                    android:src="@drawable/trackyourbus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showNews"
                    android:src="@drawable/news"
                    android:background="@drawable/news" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.89">

                <ImageView
                    android:src="@drawable/newsportal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showSchedule"
                    android:src="@drawable/schedule"
                    android:background="@drawable/schedule" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.89">

                <ImageView
                    android:src="@drawable/busschedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="exit"
                    android:src="@drawable/exit"
                    android:background="@drawable/exit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.89">

                <ImageView
                    android:src="@drawable/exittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
